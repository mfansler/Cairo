ifdef DEBUG
  XTRA_PKG_CPPFLAGS=-DJGD_DEBUG
endif

ifeq "$(WIN)" "64"
BITS=64
else
BITS=32
endif

PKG_CPPFLAGS = -I.

PKG_LIBS += -L$(LIBRARY_LIB) -lcairo -lfontconfig -lintl -liconv -lexpat -lfreetype -lharfbuzz \
            -lpixman-1 -ltiff -lwebp -llzma -lzstd -ljpeg -lpng -lbz2 \
            -lz -lgdi32 -lmsimg32
PKG_CPPFLAGS += -I$(LIBRARY_INC) -I$(LIBRARY_INC)/cairo -I$(LIBRARY_INC)/freetype2

PKG_LIBS += $(GRAPHAPP_LIB)
PKG_CPPFLAGS += $(XTRA_PKG_CPPFLAGS)
